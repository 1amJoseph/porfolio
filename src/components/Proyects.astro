---
const proyectos = [
  {
    title: "sitio personal con astro",
    description:
      "Desarrollo de un portfolio web personal desde cero utilizando diferentes tecnologias.",
    image: "/shoot1.webp",
    tecnologies: ["Astro", "Tailwind", "TypeScript"],
    link: "#",
  },
  {
    title: "Clon de Space Invaders 1978",
    description:
      "Desarrollo de un juego antiguo presentado como proyecto de feria tecnologica.",
    image: "/shoot2.webp",
    tecnologies: ["Python"],
    link: "#",
  },
];
---

<section id="Proyects" class="py-28 px-4 md:px-8 text-white">
  <h2 class="text-3xl xl:text-4xl font-bold mb-8">Proyectos Destacados</h2>
  <div class="grid lg:grid-cols-2 xl:grid-cols-3 sm:mx-20 lg:mx-0 gap-8">
    {
      proyectos.map((proyecto) => (
        <div class="bg-white/5 border border-white/10 p-6 rounded-2xl shadow hover:shadow-xl ">
          <img
            src={proyecto.image}
            alt={`Imagen de ${proyecto.title}`}
            class="w-full max-h-64 object-contain rounded-md mb-4"
          />
          <h3 class="text-2xl font-semibold mb-2">{proyecto.title}</h3>
          <p class="text-gray-300 mb-4 text-pretty">{proyecto.description}</p>
          <div class="text-sm text-gray-400 mb-4">
            <span class="font-semibold text-gray-300">Tecnologías:</span>{" "}
            {proyecto.tecnologies.join(" · ")}
          </div>
          <a
            href={proyecto.link}
            target="_blank"
            class="text-blue-400 underline text-sm"
          />
        </div>
      ))
    }
  </div>
</section>
