---
const proyectos = [
  {
    title: "sitio personal con astro",
    description:
      "Desarrollo de un portfolio web personal desde cero utilizando diferentes tecnologias.",
    image: "/shoot1.webp",
    tecnologies: ["Astro", "Tailwind", "Github"],
    link: "#",
  },
  {
    title: "Clon de Space Invaders 1978",
    description:
      "Desarrollo de un juego antiguo presentado como proyecto de feria tecnologica",
    image: "/shoot2.webp",
    tecnologies: ["Python", "Github"],
    link: "#",
  },
  {
    title: "Bot de Discord personal",
    description:
      "Desarrollo de un bot de discord para ganar experiencia en la creacion de API's",
    image: "#",
    tecnologies: ["JavaScript", "NodeJS", "Discord", "Github"],
  },
];
---

<section class="py-12 px-4 md:px-8 text-white">
  <h2 class="text-3xl font-bold mb-8">Proyectos Destacados</h2>
  <div class="grid md:grid-cols-2 gap-8">
    {
      proyectos.map((proyecto) => (
        <div class="bg-[#252a32] p-6 rounded-2xl shadow hover:shadow-xl transition">
          <h3 class="text-2xl font-semibold mb-2">{proyecto.title}</h3>
          <p class="text-gray-300 mb-4">{proyecto.description}</p>
          <img
            src={proyecto.image}
            alt={`Imagen de ${proyecto.title}`}
            class="w-full max-h-64 object-contain rounded-md mb-4"
          />
          <div class="text-sm text-gray-400 mb-4">
            <span class="font-semibold text-gray-300">Tecnologías:</span>{" "}
            {proyecto.tecnologies.join(" · ")}
          </div>
          <a
            href={proyecto.link}
            target="_blank"
            class="text-blue-400 underline text-sm"
          >
            Ver proyecto →
          </a>
        </div>
      ))
    }
  </div>
</section>
